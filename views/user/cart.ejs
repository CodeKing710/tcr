<%- include('../wrappers/head', {title: 'Cart', login: id}); %>
<section>
  <h1>Shopping Cart</h1>
  <table id="cart">
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th></th>
    </tr>
    <% cart.forEach(item => { %>
      <tr class="<%= item.get('name'); %>">
        <td><%= item.get('name') %></td>
        <td><%= item.get('quantity') %></td>
        <td>$<%= item.get('price') %></td>
        <td><a href="javascript:remove('<%= item.get('name'); %>');" class="remove">Remove</a></td>
      </tr>
    <% }); %>
    <tr>
      <td>Total: </td>
      <td id="totalQty">
        <% let totalQty = 0; cart.forEach(item => {totalQty+=item.get('quantity');}); %>
        <%= totalQty %>
      </td>
      <td id="totalPrice">
        <% let total = 0; cart.forEach(item => {total+=item.get('price');}); %>
        $<%= total %>
      </td>
      <td></td>
    </tr>
  </table>
  <a href="/cart/<%= id %>/checkout" class="checkout">Checkout</a>
</section>
<%- include('../wrappers/foot'); %>