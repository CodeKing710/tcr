<%- include('./wrappers/head', {title: 'Flowers', login: id}); %>
<section>
  <flex justify="space-around" h-align="center" wrap class="card-container">
    <% flowers.forEach(flower => { %>
      <a href="/flower/<%= flower.name %>/" class="card-link-container">
        <div class="card">
          <h3><%= flower.name %></h3>
          <img src="<%= flower.img %>" alt="Picture of <%= flower.name %>" />
          <p><strong>Aromas: </strong><%= flower.aroma %></p>
          <p><%= flower.desc %></p>
          <a href="javascript:addtoCart('<%= flower.name %>');" class="cart-btn">Add to Cart</a>
        </div>
      </a>
    <% }); %>
  </flex>
</section>
<%- include('./wrappers/foot'); %>